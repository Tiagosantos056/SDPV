<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey100"
    tools:context=".activity.ListaVinhosDegustador">

    <include
        android:id="@+id/toolbarListaVinhosDegustador"
        layout="@layout/toolbar_app" />

    <TextView
        android:id="@+id/txtVinhosDegustadosSubtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Vinhos Degustados"
        style="@style/TextAboveRoundView"
        android:layout_below="@id/toolbarListaVinhosDegustador"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/round_view"
        android:layout_below="@id/txtVinhosDegustadosSubtitle"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="16dp"
        android:padding="4dp">

        <ListView
            android:id="@+id/lvListaVinhosDegustador"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </RelativeLayout>

</RelativeLayout>