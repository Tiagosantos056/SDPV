<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <TextView
        android:id="@+id/txtDialogListVinhosDeletar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/TextAppearance.MaterialComponents.Body1"
        android:text="Deletar Nota de Degustação"/>

    <TextView
        android:id="@+id/txtDialogListVinhosVisualizar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/TextAppearance.MaterialComponents.Body1"
        android:text="Visualizar Nota de Degustação"
        android:layout_below="@id/txtDialogListVinhosDeletar"
        android:layout_marginTop="8dp"/>

</RelativeLayout>